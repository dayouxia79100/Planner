<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginLeft="3dp"
              android:gravity="center_vertical"
              android:layout_height="96dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/carddemo_myapps_main_inner_title"
            style="@style/carddemo_myapps_main_inner_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yolo"
            android:layout_marginLeft="7.5dp"
            android:textColor="#DFAE5D"
            android:textSize="16.5sp"
            android:layout_gravity="left"

            />

        <TextView
            android:id="@+id/carddemo_myapps_main_inner_secondaryTitle"
            style="@style/carddemo_myapps_main_inner_secondarytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="7.5dp"

            />

        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageButton
        android:id="@+id/image_event"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12.5dp"
        android:src="@drawable/wine"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12.5dp"
        android:background="@drawable/ic_calendar_gray"
        android:id="@+id/going_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="100dp"/>


    </RelativeLayout>




</LinearLayout>