<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:padding="4dp"
        android:id="@+id/time_textView"
        android:layout_alignParentRight="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/going_checkBox"
        style="?android:attr/borderlessButtonStyle"
        android:gravity="center"
        android:layout_marginRight="12.5dp"
        android:background="@drawable/ic_calendar_gray"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_below="@id/time_textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="4dp"
        android:text="Party Name"
        android:id="@+id/partyName_textView"
        android:layout_toLeftOf="@id/going_checkBox"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:padding="4dp"
        android:text="Address"
        android:id="@+id/partyAddress_textView"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/going_checkBox"
        android:layout_below="@id/partyName_textView"/>


</RelativeLayout>