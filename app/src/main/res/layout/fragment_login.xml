<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#54B98F">
    
    <ImageView
        android:id="@+id/login_image"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="12.5dp"
        android:src="@drawable/ic_logo" />
    
    <EditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="16dp"
        android:paddingTop="17.5dp"
        android:hint="Enter your email"
        android:singleLine="true"
        android:background="@drawable/rect_textedit"
        android:layout_gravity="center_horizontal"
        android:layout_below="@id/login_image"/>
    
	<ImageView
        android:id="@+id/image_email"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:paddingTop="17.5dp"
        android:layout_below="@id/login_image"
        android:layout_toRightOf="@id/email_editText"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_email"
        />

    <EditText
        android:id="@+id/password_editText"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="36dp"
        android:paddingRight="16dp"
        android:paddingTop="17.5dp"
        android:paddingBottom="17.5dp"
        android:hint="Enter your password"
        android:singleLine="true"
        android:background="@drawable/rect_textedit"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_below="@id/email_editText"/>
    
    <ImageView
        android:id="@+id/image_password"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:paddingTop="17.5dp"
        android:layout_below="@id/email_editText"
        android:layout_toRightOf="@id/password_editText"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_action_secure"
        />
    
    <LinearLayout 
    android:id="@+id/login_buttons" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:layout_marginTop="10dp"
    android:layout_below="@id/password_editText">
    
    	<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/login_button"
        android:text="Log in"
        android:textColor="#EEEEEE"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/password_editText"/>
    
    	<TextView
    	android:layout_width="1dip"
    	android:layout_height="fill_parent"
    	android:background="#EEEEEE"/>

		<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/signup_button"
        android:text="Sign up"
        android:textColor="#EEEEEE"
        android:textSize="25sp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_below="@id/password_editText"/>
	
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:text="Â© Party Planner 2014"
        android:textSize="10sp"
        android:textColor="#FFFFFF" />

</RelativeLayout>